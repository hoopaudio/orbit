{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orbit",
  "version": "0.1.0",
  "identifier": "com.cuthlehoop.orbit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Orbit - Main",
        "label": "main",
        "width": 500,
        "height": 320,
        "minWidth": 500,
        "minHeight": 120,
        "transparent": true,
        "decorations": false,
        "resizable": true,
        "visible": false
      },
      {
        "title": "Orbit - Settings",
        "label": "settings",
        "width": 500,
        "height": 400,
        "minWidth": 500,
        "minHeight": 400,
        "transparent": false,
        "decorations": true,
        "resizable": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true
  }
}
