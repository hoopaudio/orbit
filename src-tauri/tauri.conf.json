{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orbit",
  "version": "0.1.0",
  "identifier": "com.cuthlehoop.orbit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "offlineInstaller"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Orbit - Main",
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "minimizable": false,
        "width": 500,
        "height": 100,
        "visible": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "center": false,
        "visible": false,
        "x": 1060,
        "y": 30,
        "minWidth": 500,
        "minHeight": 100
      },
      {
        "transparent": true,
        "decorations": true,
        "resizable": false,
        "visible": false,
        "label": "settings",
        "url": "#settings",
        "title": "Orbit - Settings",
        "width": 600,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true
  }
}
